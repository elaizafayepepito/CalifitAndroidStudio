<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    tools:ignore="ExtraText">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.califit.SplashScreenFragment"
        android:label="SplashScreen">
        <action
            android:id="@+id/action_splashScreenFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.califit.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_userRegistrationFragment" />
           <!--- app:destination="@id/userRegistrationFragment" /> -->
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.califit.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_nameRegistrationFragment_to_ageRegistrationFragment"
            app:destination="@id/ageRegistrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/ageRegistrationFragment"
        android:name="com.example.califit.AgeRegistrationFragment"
        android:label="fragment_age_registration">
    <action
        android:id="@+id/action_ageRegistrationFragment_to_genderRegistrationFragment" />
       <!-- app:destination="@id/genderRegistrationFragment" /> -->
    </fragment>


    <!-- Actions to other fragments will go here -->
</navigation>
