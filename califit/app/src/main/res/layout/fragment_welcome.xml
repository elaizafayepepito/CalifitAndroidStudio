<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E79F"
    tools:context=".WelcomeFragment">

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/welcome_pic" />

    <TextView
        android:id="@+id/text_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome!"
        android:textColor="#820000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_welcome_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_welcome_title"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="CaliFit welcomes you to a world of calisthenics innovation, where every rep brings you closer to your best self."
        android:textAlignment="center"
        android:textColor="#820000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_start_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_welcome_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#820000"
    android:paddingHorizontal="30dp"
    android:paddingVertical="15dp"
    android:text="Start Your Journey"
    android:textColor="#FFF"
    android:textSize="16sp" />

</RelativeLayout>
