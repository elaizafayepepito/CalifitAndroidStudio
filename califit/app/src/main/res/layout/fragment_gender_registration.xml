<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFD700"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_gender"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/gender_pic" />

    <TextView
        android:id="@+id/text_gender_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your gender?"
        android:textSize="45sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button_select_gender"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="Select Gender"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="Finish"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_gravity="end" />

    <!-- Include other UI elements such as error messages and navigation icons as needed -->

</LinearLayout>
