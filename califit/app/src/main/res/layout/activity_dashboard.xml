<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9E79F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>


        <!-- Recent Workouts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Greeting and Tagline -->
            <LinearLayout
                android:id="@+id/textContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="45dp">

                <TextView
                    android:id="@+id/greetingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, TEKNOY!"
                    android:textColor="#820000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/taglineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lets_workout_tagline"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- App Logo -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/textContainer"
                android:src="@drawable/califit_logo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recentWorkoutsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:marginTop="20dp">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textSize="18sp"
                android:textColor="#820000"
                android:fontStyle="italic"
                android:textStyle="italic"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:id="@+id/workoutsScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Tabletop Crunch Workout -->
                    <LinearLayout
                        android:id="@+id/dbCrunchCard"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/yellowgold"
                        android:padding="15dp"
                        android:marginRight="10dp"
                        android:marginTop="50dp"
                        android:cornerRadius="10dp"
                        android:gravity="center_horizontal"
                        android:layout_marginHorizontal="5dp">

                        <TextView
                            android:id="@+id/tabletopCrunchWorkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TABLETOP CRUNCH"
                            android:textSize="10sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:marginBottom="5dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/crunchProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="30sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CORRECT EXECUTIONS"
                            android:textColor="@color/maroon"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <!-- Inclined Pushup Workout -->
                    <LinearLayout
                        android:id="@+id/dbPushupCard"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="15dp"
                        android:marginRight="10dp"
                        android:marginTop="50dp"
                        android:cornerRadius="10dp"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/inclinedPushupWorkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INCLINED PUSHUP"
                            android:textSize="10sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:marginBottom="5dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/pushupProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="30sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/yellowgold"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CORRECT EXECUTIONS"
                            android:textColor="@color/maroon"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <!-- Sumo Squat Workout -->
                    <LinearLayout
                        android:id="@+id/dbSquatCard"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/yellowgold"
                        android:padding="15dp"
                        android:marginRight="10dp"
                        android:marginTop="50dp"
                        android:cornerRadius="10dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/sumoSquatWorkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUMO SQUATS"
                            android:textSize="10sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:marginBottom="5dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/squatProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="30sp"
                            android:textColor="#820000"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CORRECT EXECUTIONS"
                            android:textColor="@color/maroon"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"/>

                    </LinearLayout>



                    <!-- Add more workout cards as needed -->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9F0202"
            android:background="@drawable/button_radius"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:text="Start Exercise"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/maroon"
            android:layout_marginTop="20dp"/>

        <!-- Exercise Section -->
        <LinearLayout
            android:id="@+id/exercisesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:marginTop="20dp">

            <TextView
                android:id="@+id/exerciseSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercises"
                android:textSize="18sp"
                android:textColor="#820000"
                android:fontStyle="italic"
                android:textStyle="italic"
                android:layout_marginVertical="10dp"/>

            <!-- Exercise Cards Description -->
            <!-- Tabletop Crunch Description -->
            <LinearLayout
                android:id="@+id/crunchDemoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/crunchDemoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tabletop Crunch"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/maroon"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/crunchDemoDescription"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="The Tabletop Crunch is an abdominal exercise that focuses on strengthening the core muscles, specifically the rectus abdominis."
                            android:textColor="@color/maroon"
                            android:textSize="12sp"
                            android:textStyle="normal|italic"
                            android:paddingTop="12dp"/>

                        <Button
                            android:id="@+id/crunchDemoBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:backgroundTint="#9F0202"
                            android:background="@drawable/button_radius"
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="5dp"
                            android:text="WATCH DEMO"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/exercise3Image"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="Exercise 3"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tabletop_crunch" />

                </LinearLayout>

            </LinearLayout>

            <!-- Inclined Pushup Description -->
            <LinearLayout
                android:id="@+id/pushupDemoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/pushupDemoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inclined Pushup"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/maroon"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pushupDemoDescription"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="The Tabletop Crunch is an abdominal exercise that focuses on strengthening the core muscles, specifically the rectus abdominis."
                            android:textColor="@color/maroon"
                            android:textSize="12sp"
                            android:textStyle="normal|italic"
                            android:paddingTop="12dp"/>

                        <Button
                            android:id="@+id/pushupDemoBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:backgroundTint="#9F0202"
                            android:background="@drawable/button_radius"
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="5dp"
                            android:text="WATCH DEMO"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/exercise1Image"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/inclined_pushup"
                        android:scaleType="fitCenter"
                        android:contentDescription="Exercise 1"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Sumo Squat Description -->
            <LinearLayout
                android:id="@+id/squatDemoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/squatDemoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sumo Squat"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/maroon"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/squatDemoDescription"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:text="The Tabletop Crunch is an abdominal exercise that focuses on strengthening the core muscles, specifically the rectus abdominis."
                            android:textColor="@color/maroon"
                            android:textSize="12sp"
                            android:textStyle="normal|italic" />

                        <Button
                            android:id="@+id/squatDemoBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_radius"
                            android:backgroundTint="#9F0202"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="5dp"
                            android:text="WATCH DEMO"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/exercise2Image"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="Exercise 2"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sumo_squat" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</ScrollView>